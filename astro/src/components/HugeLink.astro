---
import Icon from './Icon';

export interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props;
---

<a href={href} target="_blank" class="flex items-center gap-4 group transition-colors hover:text-orange hover:text-outline-orange">
  <span class="text-2xl font-extrabold uppercase md:text-3xl">{text}</span>
  <span class="text-white/50 group-hover:text-orange">
    <Icon name="northEast" />
  </span>
</a>
