---
import Icon from './Icon.astro';

export interface Props {
  text: string;
  href: string;
  primary?: boolean;
}

const { text, href, primary = false } = Astro.props;
---

<a href={href} class={`flex items-center grow-0 gap-2 w-max border ${primary ? 'border-orange/30' : 'border-white/30'} rounded-full px-6 py-4`}>
  <span class={`${primary ? 'text-orange' : ''} font-bold uppercase`}>{text}</span>
  <span class={primary ? 'text-orange/50' : 'text-white/50'}>
    <Icon name="northEast" size={16} />
  </span>
</a>
