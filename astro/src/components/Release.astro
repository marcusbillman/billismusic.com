---
import Button from "./Button.astro";
import IconButton from "./IconButton.astro";
import type { ImageAsset, Slug } from "@sanity/types";

export interface Props {
  release: ReleaseDocument;
  featured?: boolean;
}

export type ReleaseDocument = {
  _createdAt: string,
  _id: string,
  _rev: string,
  _type: string,
  _updatedAt: string,
  coverArt: ImageAsset,
  coverArtUrl: string,
  slug: Slug,
  streamUrl: string,
  subtitle: string,
  title: string
}

const { release, featured = false } = Astro.props;

console.log(release.coverArtUrl)
---

<div class={`relative flex isolate ${featured ? 'xl:justify-center xl:py-4' : ''}`}>
  <div aria-hidden="true" class={featured ? `absolute inset-0 bg-cover bg-center opacity-30 blur-3xl -z-10` : ''} style={{backgroundImage: `url(${release.coverArtUrl})`}}></div>
  <div>
    <div class={`flex gap-6 max-w-5xl lg:gap-8 ${featured ? 'xl:flex-row-reverse xl:gap-24' : ''}`}>
      <div class={`w-24 h-24 bg-white/30 lg:w-40 lg:h-40 ${featured ? 'xl:w-80 xl:h-80' : ''}`} style={{backgroundImage: `url(${release.coverArtUrl})`}}></div>
      <div class={`flex flex-col justify-between ${featured ? 'xl:items-end xl:justify-center xl:gap-8' : ''}`}>
        <div class={`uppercase ${featured ? 'xl:text-right' : ''}`}>
          <p class="text-white/50 font-bold">{release.subtitle}</p>
          <p class={`${featured ? 'text-orange xl:text-6xl' : ''} text-2xl font-extrabold mt-2 lg:text-3xl`}>{release.title}</p>
        </div>
        <div class="hidden xl:flex xl:items-center xl:gap-4">
          <IconButton icon="playArrow" primary={featured} />
          <Button text="Stream" href={release.streamUrl} primary={featured} />
        </div>
      </div>
    </div>
    <div class="flex items-center gap-4 mt-6 xl:hidden">
      <IconButton icon="playArrow" primary={featured} />
      <Button text="Stream" href={release.streamUrl} primary={featured} />
    </div>
  </div>
</div>
